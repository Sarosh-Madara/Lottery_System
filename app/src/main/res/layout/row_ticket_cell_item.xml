<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/_12sdp"
    android:layout_marginRight="@dimen/_12sdp"
    android:layout_marginTop="@dimen/_15sdp"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/text_yellow"
            android:textSize="@dimen/_20sdp"
            android:textFontWeight="500"
            android:id="@+id/text_ticket_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/dummy_id" />
        <TextView
            android:textColor="@color/text_red"
            android:textSize="@dimen/_20sdp"
            android:textFontWeight="500"
            android:id="@+id/text_ticket_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/dummy_date" />

    </LinearLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_num_line_1"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/shape_purple_square"
            android:gravity="center"
            android:text=" ? "
            android:textColor="@color/white"
            android:textSize="@dimen/_30sdp" />

        <View
            android:layout_width="@dimen/_10sdp"
            android:layout_height="fill_parent" />

        <TextView
            android:id="@+id/txt_num_line_2"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/shape_purple_square"
            android:gravity="center"
            android:text=" ? "
            android:textColor="@color/white"
            android:textSize="@dimen/_30sdp" />

        <View
            android:layout_width="@dimen/_10sdp"
            android:layout_height="fill_parent" />

        <TextView
            android:id="@+id/txt_num_line_3"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/shape_purple_square"
            android:gravity="center"
            android:text=" ? "
            android:textColor="@color/white"
            android:textSize="@dimen/_30sdp" />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/shape_blue_rectangle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_5sdp"/>

</androidx.appcompat.widget.LinearLayoutCompat>