<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/text_yellow"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:id="@+id/text_ticket_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lottery_results" />

        </LinearLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_num_line_1"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:background="@drawable/shape_purple_square"
                android:gravity="center"
                android:text=" ? "
                android:textColor="@color/white"
                android:textSize="@dimen/_30sdp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_10sdp" />

            <TextView
                android:id="@+id/txt_num_line_2"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:background="@drawable/shape_purple_square"
                android:gravity="center"
                android:text=" ? "
                android:textColor="@color/white"
                android:textSize="@dimen/_30sdp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_10sdp" />

            <TextView
                android:id="@+id/txt_num_line_3"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:background="@drawable/shape_purple_square"
                android:gravity="center"
                android:text=" ? "
                android:textColor="@color/white"
                android:textSize="@dimen/_30sdp" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/shape_blue_rectangle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5sdp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:src="@drawable/ic_wins"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:textStyle="bold"
            android:id="@+id/txt_total_wins"
            android:textSize="@dimen/_25sdp"
            android:text="@string/your_total_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>